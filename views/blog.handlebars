<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <p>
  <div class="blog-list">
    <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
  </div><br><br>
  <div>
    <label for="newName">Name:</label>
    <input type="text" id="newName">
    <label for="newContent">Content:</label>
    <input type="text" id="newContent">
    <div class="update">
      <br><button class="btn btn-sm" data-id="{{id}}">UPDATE</button>
    </div>
  </div><br><br>

  <div>
    <label for="newComment">Add Comment:</label>
    <input type="text" id="newComment">
    <div class="comment">
      <br><button class="btn btn-sm" data-id="{{id}}">Comment</button>
    </div>

  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.content}}</h4>
      </div>

    </div>
    {{/each}}
  </div>
  {{/if}}


  </div>


  <script src="../js/blog.js"></script>